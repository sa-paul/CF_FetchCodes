{
    "name": "CF FetchCodes",
    "description":"Fetch Accepted Codes of CodeForces Friends",
    "version": "0.0.1",
    "manifest_version": 3,
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "128": "assets/icon_128_128.png"
      }
    },
    "icons": {
        "48": "assets/icon48.png",
        "16": "assets/icon16.png",
        "20": "assets/icon20.png",
        "32": "assets/icon32.png",
        "64": "assets/icon64.png",
        "96": "assets/icon_96_96.png",
        "128": "assets/icon_128_128.png"
    },
    "host_permissions": [
      "https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.8.0/styles/monokai-sublime.min.css",
      "https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.8.0/highlight.min.js",
      "https://codeforces.com/*"
    ],
    "content_scripts": [
        {
          "js": [
            "js/ContentFriends.js",
            "js/popup.js"
          ],
          "css":[
            "css/ContentFriends.css",
            "css/popup.css"
          ],
          "matches": [
            "https://codeforces.com/contest/*/problem/*",
            "https://codeforces.com/problemset/problem/*"
          ]
        }
      ]
}